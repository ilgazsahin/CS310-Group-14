rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Event images folder
    match /event_images/{imageId} {
      // Allow read: Anyone authenticated can view event images
      allow read: if request.auth != null;
      
      // Allow write: Only authenticated users can upload images
      // Images are uploaded during event creation, so we allow authenticated users
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024 // 5MB limit
        && request.resource.contentType.matches('image/.*');
      
      // Allow delete: Only authenticated users
      // Note: Ownership is enforced by app logic - images are only deleted when
      // the associated event is deleted, and event deletion is restricted to creators
      // by Firestore security rules. Storage rules cannot access Firestore data
      // to verify ownership, so we rely on the app's FirestoreService to enforce
      // proper access control before calling deleteImage().
      allow delete: if request.auth != null;
    }
    
    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

